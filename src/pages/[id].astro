---
import Layout from "../layouts/Layout.astro";
import colorData from "../data/colors.json";

export async function getStaticPaths() {
  return colorData.map((color) => {
    return {
      params: { id: color.name.toLowerCase() },
      props: { color },
    };
  });
}
const { id } = Astro.params;
const { color } = Astro.props;
---

<Layout title={`147 Colors | ${color.name}`}>
  <div class={`flow color ${color.theme}`.toLowerCase()} style={`background-color: ${color.name};`}>
    <h1>{color.name}</h1>
    <div class="color-btns">
      <button id="hex" onclick="copyHex()">#{color.hex}</button>
      <button id="rgb" onclick="copyRGB()">{color.rgb}</button>
    </div>

    <button class="back-link">&larr; Back to the color grid</button>
  </div>
</Layout> 

<style lang="scss">
  body {
    height: 100vh;
    width: 100vw;
    margin: 0;
    padding: var(--space-xl);
    display: grid;
    place-content: center;
    text-align: center;
  }
  
  .color {
    border: var(--space-s-l) solid white;
    width: 100vw;
    height: 100vh;
    display: grid;
    place-content: center;
    padding: var(--space-s-l);
  }

  h1 {
    font-size: var(--step-6, 2em);
    word-break: break-all;
  }

  .dark,
  .dark a {
    color: white;
  }

  .light,
  .light a {
    color: black;
  }
</style>
